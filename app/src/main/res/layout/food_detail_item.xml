<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLL"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:background="@drawable/itemectangle"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/back_btn"
            android:onClick="onBackButtonClicked"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnMore"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginStart="200dp"
            android:fontFamily="@font/nunito"
            android:text="More"
            android:background="@color/white"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dish_detail_image"
            android:layout_width="100dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="left"
            android:layout_height="100dp"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dish_name"
                android:text="TEST NAME DISH"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:fontFamily="@font/nunito"/>

            <TextView
                android:id="@+id/dish_price"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:textColor="#FA4A0C"
                android:text=""
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:fontFamily="@font/nunito"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnMinus"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="-" />

        <TextView
            android:id="@+id/tvQuantity"
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnPlus"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="+" />

        <LinearLayout
            android:id="@+id/addToCartLL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:background="@drawable/bac_button_orange">

            <TextView
                android:id="@+id/textVB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/nunito"
                android:textSize="17sp"
                android:text="Add to cart"
                android:textColor="@android:color/white" />

            <ImageView
                android:id="@+id/cartImage"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical|right"
                android:src="@drawable/shopping_cart_black" />
        </LinearLayout>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/continueShopBtn"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bac_button_orange"
        android:text="Continue Shop"
        android:textColor="@color/white"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/nunito"
        android:textSize="18sp"
        android:onClick="onBackButtonClicked"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/toCartBtn"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:background="@drawable/bac_button_orange"
        android:text="Go to cart"
        android:textColor="@color/white"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/nunito"
        android:textSize="18sp"/>

</LinearLayout>